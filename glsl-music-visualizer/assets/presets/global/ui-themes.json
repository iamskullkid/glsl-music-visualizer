  "accessibility": {
    "colorBlindnessSupport": {
      "enabled": true,
      "protanopia": {
        "adjustments": true,
        "alternativeIndicators": true
      },
      "deuteranopia": {
        "adjustments": true,
        "alternativeIndicators": true
      },
      "tritanopia": {
        "adjustments": true,
        "alternativeIndicators": true
      }
    },
    "highContrastMode": {
      "enabled": true,
      "contrastMultiplier": 1.5,
      "borderEnhancement": true
    },
    "reducedMotion": {
      "enabled": true,
      "respectSystemPreference": true,
      "alternativeIndicators": true
    },
    "epilepsyProtection": {
      "flashThreshold": 3,
      "disableRapidTransitions": true,
      "warningPrompt": true
    }
  },

  "performance": {
    "enableGPUOptimizations": true,
    "levelOfDetail": {
      "low": {
        "glassEffects": "minimal",
        "particleCount": 50,
        "animationComplexity": "basic"
      },
      "medium": {
        "glassEffects": "standard",
        "particleCount": 150,
        "animationComplexity": "enhanced"
      },
      "high": {
        "glassEffects": "full",
        "particleCount": 300,
        "animationComplexity": "maximum"
      }
    },
    "adaptiveRendering": {
      "enabled": true,
      "fpsThreshold": 30,
      "qualityAdjustment": "automatic"
    }
  },

  "customization": {
    "enableUserThemes": true,
    "maxUserThemes": 10,
    "exportFormat": "json",
    "sharedThemeSupport": true,
    "themeValidation": {
      "requiredFields": ["id", "name", "colors"],
      "colorValidation": true,
      "accessibilityChecks": true
    }
  },

  "integration": {
    "cssVariableMapping": {
      "enabled": true,
      "prefix": "--theme-",
      "autoUpdate": true
    },
    "audioReactiveIntegration": {
      "enabled": true,
      "smoothingFactor": 0.8,
      "frequencyBands": ["bass", "mid", "treble"],
      "colorMappingMode": "HSV"
    },
    "materialSystemIntegration": {
      "enabled": true,
      "colorSync": true,
      "effectMapping": true
    }
  }
