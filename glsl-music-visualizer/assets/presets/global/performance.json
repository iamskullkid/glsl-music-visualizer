{
  "metadata": {
    "version": "1.0.0",
    "name": "Global Performance Settings",
    "description": "Comprehensive performance monitoring and adaptive quality configuration for GLSL Music Visualizer",
    "author": "GLSL Music Visualizer Team",
    "created": "2024-01-01T00:00:00Z",
    "lastModified": "2024-01-01T00:00:00Z",
    "compatibility": {
      "minVersion": "1.0.0",
      "maxVersion": "2.0.0",
      "engines": ["PerformanceMonitor", "RenderEngine", "AudioEngine", "ParticleSystem", "UIManager"]
    },
    "tags": ["performance", "optimization", "adaptive", "monitoring", "quality"]
  },

  "performanceMonitor": {
    "core": {
      "enabled": true,
      "debugMode": false,
      "updateInterval": 500,
      "sampleWindow": 120,
      "enableGPUTiming": true,
      "enableMemoryMonitoring": true,
      "enableCPUProfiling": true,
      "enableAdaptiveQuality": true
    },

    "thresholds": {
      "targetFPS": 60,
      "minFPS": 30,
      "maxFrameTime": 33.33,
      "criticalFrameTime": 50.0,
      "gpuBudget": 16.67,
      "memoryLimit": 536870912,
      "memoryWarning": 402653184,
      "cpuBudget": 16.67,
      "cpuWarning": 25.0,
      "thermalThreshold": 85.0,
      "batteryThreshold": 20.0
    },

    "adaptive": {
      "enabled": true,
      "changeTimeout": 2000,
      "consecutiveFramesThreshold": 10,
      "goodPerformanceThreshold": 60,
      "responseTime": 1.0,
      "hysteresis": 0.1,
      "enablePredictive": false,
      "predictionWindow": 30,
      "learningRate": 0.1
    },

    "metrics": {
      "fps": {
        "trackMinMax": true,
        "smoothingFactor": 0.1,
        "alertThreshold": 30,
        "recordHistory": true,
        "historySize": 300
      },
      "frameTime": {
        "trackVariance": true,
        "smoothingFactor": 0.1,
        "alertThreshold": 33.33,
        "percentileTracking": [50, 95, 99]
      },
      "memory": {
        "trackGrowthRate": true,
        "gcDetection": true,
        "leakDetection": true,
        "alertThreshold": 0.8,
        "samplingInterval": 5000
      },
      "gpu": {
        "trackDrawCalls": true,
        "trackVertexCount": true,
        "trackTextureBinds": true,
        "trackShaderSwitches": true,
        "trackPipelineStalls": false,
        "memoryEstimation": true
      },
      "cpu": {
        "trackSubsystems": true,
        "subsystems": ["audioProcessing", "physics", "rendering", "ui", "scripting"],
        "trackMainThread": true,
        "trackWorkerThreads": true,
        "enableDetailed": false
      }
    },

    "alerts": {
      "enabled": true,
      "lowFPS": {
        "enabled": true,
        "threshold": 30,
        "severity": "warning",
        "suppressDuration": 5000
      },
      "highFrameTime": {
        "enabled": true,
        "threshold": 33.33,
        "severity": "warning",
        "suppressDuration": 5000
      },
      "highMemory": {
        "enabled": true,
        "threshold": 0.9,
        "severity": "error",
        "suppressDuration": 10000
      },
      "gpuStall": {
        "enabled": false,
        "threshold": 5.0,
        "severity": "warning",
        "suppressDuration": 3000
      },
      "thermalThrottling": {
        "enabled": false,
        "threshold": 85.0,
        "severity": "critical",
        "suppressDuration": 30000
      }
    }
  },

