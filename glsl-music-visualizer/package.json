{
  "name": "glsl-music-visualizer",
  "version": "1.0.0",
  "description": "Advanced GLSL-based music visualizer with sophisticated audio analysis and physically-accurate material simulation",
  "main": "src/main.js",
  "scripts": {
    "dev": "webpack serve --mode development --hot",
    "build": "webpack --mode production",
    "build:analyze": "webpack-bundle-analyzer dist/main.js",
    "test": "jest",
    "lint": "eslint src/ --ext .js",
    "format": "prettier --write src/",
    "validate-shaders": "node tools/shader-compiler.js --validate",
    "optimize-assets": "node tools/asset-optimizer.js",
    "profile": "node tools/performance-profiler.js",
    "generate-visualizer": "node tools/visualizer-generator.js",
    "validate-plugins": "node tools/plugin-validator.js"
  },
  "keywords": [
    "webgl",
    "glsl",
    "music-visualization",
    "audio-analysis",
    "real-time-graphics",
    "shader-programming"
  ],
  "author": "Advanced Graphics Team",
  "license": "MIT",
  "dependencies": {
    "gl-matrix": "^3.4.3",
    "web-audio-beat-detector": "^8.0.0",
    "meyda": "^5.6.2",
    "tone": "^14.7.77",
    "dat.gui": "^0.7.9",
    "stats.js": "^0.17.0",
    "glsl-noise": "^0.0.0",
    "webgl-debug": "^2.0.1",
    "earcut": "^2.2.4",
    "delaunator": "^5.0.0",
    "simplex-noise": "^4.0.1",
    "color": "^4.2.3",
    "lodash": "^4.17.21",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-bundle-analyzer": "^4.9.0",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "raw-loader": "^4.0.2",
    "file-loader": "^6.2.0",
    "url-loader": "^4.1.1",
    "babel-loader": "^9.1.2",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "glslify-loader": "^2.0.0",
    "glslify": "^7.1.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-webgl-canvas-mock": "^0.2.3",
    "glsl-minifier": "^1.4.5",
    "imagemin": "^8.0.1",
    "imagemin-webpack-plugin": "^2.4.2",
    "terser-webpack-plugin": "^5.3.9",
    "copy-webpack-plugin": "^11.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/glsl-music-visualizer.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/glsl-music-visualizer/issues"
  },
  "homepage": "https://github.com/your-org/glsl-music-visualizer#readme"
}